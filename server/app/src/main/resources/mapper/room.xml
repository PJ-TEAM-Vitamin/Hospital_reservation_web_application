<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vitamin.app.mapper.RoomMapper">
    <!-- 방 정보 추가 -->
    <insert id="insertRoom" parameterType="com.example.testt.dto.RoomDto">
        insert into room
        values(#{room_id},
        #{name},
        #{area},
        #{floor},
        #{call_number},
        #{hospital_id},
        #{doctor_id})
    </insert>

    <!-- 방 정보 수정 -->
    <update id="updateRoom" parameterType="com.vitamin.app.dto.RoomDto">
        update room set name = #{name},
        area = #{area},
        floor = #{floor},
        call_number = #{call_number}
        where room_id = #{room_id}
    </update>

    <!-- clinic 정보 입력 -->
    <insert id="insertClinic" parameterType="com.vitamin.app.dto.ClinicDto">
        insert into clinic
        values(#{clinic_id},
        #{title},
        #{description},
        #{room_id})

    </insert>

    <!-- clinic 정보 수정 -->
    <update id="updateClinic" parameterType="com.vitamin.app.dto.ClinicDto">
        update clinic set title = #{title},
        description = #{description}
        where clinic_id = #{clinic_id}
    </update>

</mapper>