<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vitamin.app.mapper.NoticeMapper">
    <!-- notice 추가 -->
    <insert id="insertNotice" parameterType="com.vitamin.app.dto.NoticeDto">
        insert into notice
        values(#{notice_id},
        #{title},
        #{description},
        #{created_at},
        #{updated_at},
        #{hospital_id},
        #{admin_id})
    </insert>
    <!-- notice 수정 -->
    <update id="updateNotice" parameterType="com.vitamin.app.dto.NoticeDto">
        update notice set title = #{title},
        description = #{description},
        created_at = #{created_at},
        updated_at = #{updated_at}
        where notice_id = #{notice_id}
    </update>


</mapper>